doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.0.1/css/foundation.css')
    script(src="/javascripts/jquery-2.1.4.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.0.1/js/foundation.js')
    script(src="/javascripts/angular.min.js")
    script(src="/javascripts/app.js")
  
  body(ng-app="cyc" ng-controller="CycCtrl")
    nav( class="top-bar" data-topbar role="navigation")
      ul(class="title-area")
        li(class="name")
          h1
            a(href="#" ng-click="home()") Chico Youth Court
        li(class="toggle-topbar menu-icon")
          a(href="#") Menu
      section(class="top-bar-section")
        ul(class="right")
          li
            a(href="#" ng-click="about()") About
          li
            a(href="#" ng-click="history()") History
          li
            a(href="/mission") Mission
          li
            a(href="/volunteer_info") Volunteer Information
          li
            a(href="/blog") Blog
          li
            a(href="/calendar") Calendar
          li
            a(href="/members") Members
          li
            a(href="/donation_info") Donate
            
    block content
